---
pagination:
  data: collections.authors
  size: 1
  alias: author
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: "Prompts by {{ author }}"
permalink: /authors/{{ author | slugify }}/
---
<div class="py-12">
  <div class="mb-12">
    {% set githubUser = github[author] %}
    {% if githubUser %}
      <div class="relative bg-slate-900/50 border border-slate-800 rounded-2xl p-8 max-w-2xl mx-auto overflow-hidden">
        <!-- Background Glow -->
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-64 h-64 bg-primary-500/20 blur-[100px] rounded-full pointer-events-none"></div>
        
        <div class="relative z-10 flex flex-col md:flex-row items-center gap-6 md:gap-8">
          <a href="{{ githubUser.html_url }}" target="_blank" rel="noopener noreferrer" class="shrink-0">
            <img src="{{ githubUser.avatar_url }}" alt="{{ author }}" class="w-20 h-20 md:w-24 md:h-24 rounded-full border-4 border-slate-700 shadow-2xl hover:scale-105 transition-transform duration-300 ring-2 ring-primary-500/30">
          </a>
          
          <div class="text-center md:text-left flex-1 min-w-0 w-full overflow-hidden">
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-2 tracking-tight truncate">{{ githubUser.name }}</h1>
            <p class="text-primary-400 font-mono text-sm mb-4 truncate">@{{ author }}</p>
            
            {% if githubUser.bio %}
            <p class="text-slate-300 text-lg leading-relaxed mb-6">{{ githubUser.bio }}</p>
            {% endif %}
            
            <div class="flex flex-wrap justify-center md:justify-start gap-4">
              <a href="{{ githubUser.html_url }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-slate-800 hover:bg-slate-700 text-white px-4 py-2 rounded-lg transition-colors text-sm font-medium border border-slate-700">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="text-slate-400"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                GitHub Profile
              </a>
              {% if githubUser.location %}
              <span class="inline-flex items-center gap-2 text-slate-400 text-sm px-3 py-2 bg-slate-900/50 rounded-lg border border-slate-800">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-500"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                {{ githubUser.location }}
              </span>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="text-center">
        <h1 class="text-4xl font-bold bg-gradient-to-r from-white to-slate-400 bg-clip-text text-transparent mb-4">{{ author }}</h1>
        <p class="text-slate-400">Prompts contributed by <strong>{{ author }}</strong></p>
      </div>
    {% endif %}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for prompt in collections.prompts | reverse %}
      {% if prompt.data.author == author %}
      <a href="{{ prompt.url }}" class="prompt-card group bg-slate-900/40 border border-slate-800 rounded-xl p-6 hover:bg-slate-900/60 hover:border-primary-500/50 transition-all duration-300 hover:-translate-y-1 block relative overflow-hidden">
        <div class="flex items-center gap-2 mb-4">
          <span class="px-2 py-1 rounded text-xs font-bold bg-primary-950/50 text-primary-400 border border-primary-900/50">{{ prompt.data.model }}</span>
          <span class="text-slate-600 text-xs">{{ prompt.date | readableDate }}</span>
        </div>
        <h3 class="text-xl font-bold text-slate-200 mb-2 group-hover:text-white transition-colors">{{ prompt.data.title }}</h3>
        <p class="text-slate-400 text-sm mb-4 line-clamp-2">{{ prompt.data.description }}</p>
      </a>
      {% endif %}
    {% endfor %}
  </div>
</div>
