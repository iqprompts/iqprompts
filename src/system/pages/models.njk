---
pagination:
  data: collections.models
  size: 1
  alias: model
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: "Prompts for {{ model }}"
permalink: /models/{{ model | slugify }}/
---
<div class="py-12">
  {% set headerColor = "cyan" %}
  {% set headerTitle = model %}
  {% set headerDescription %}
    Optimized prompts for the <span class="text-cyan-400 font-mono text-sm px-2 py-0.5 rounded-md bg-cyan-500/10 border border-cyan-500/20">{{ model }}</span> architecture
  {% endset %}
  {% set headerIcon %}
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a10 10 0 1 0 10 10 4 4 0 0 1-5-5 4 4 0 0 1-5-5"/><path d="M8.5 8.5v.01"/><path d="M16 12h.01"/><path d="M12 16h.01"/></svg>
  {% endset %}
  {% include "components/header.njk" %}

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for prompt in collections.prompts | reverse %}
      {% if prompt.data.model == model %}
      <a href="{{ prompt.url }}" class="prompt-card group bg-slate-900/40 border border-slate-800 rounded-xl p-6 hover:bg-slate-900/60 hover:border-primary-500/50 transition-all duration-300 hover:-translate-y-1 block relative overflow-hidden">
        <div class="flex items-center gap-2 mb-4">
          <span class="px-2 py-1 rounded text-xs font-bold bg-primary-950/50 text-primary-400 border border-primary-900/50">{{ prompt.data.model }}</span>
          <span class="text-slate-600 text-xs">{{ prompt.date | readableDate }}</span>
        </div>
        <h3 class="text-xl font-bold text-slate-200 mb-2 group-hover:text-white transition-colors">{{ prompt.data.title }}</h3>
        <p class="text-slate-400 text-sm mb-4 line-clamp-2">{{ prompt.data.description }}</p>
      </a>
      {% endif %}
    {% endfor %}
  </div>
</div>
