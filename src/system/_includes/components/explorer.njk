<div class="">
  <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-400"><path d="M12 2H2v10l9.29 9.29c.94.94 2.48.94 3.42 0l6.58-6.58c.94-.94.94-2.48 0-3.42L12 2Z"/><path d="M7 7h.01"/></svg>
    Explore Topics
  </h3>
  <div class="flex flex-wrap gap-2">
    {% for tag in collections.popularTags | limit(30) | shuffle | limit(15) %}
      <a href="/tags/{{ tag.name | slugify }}/" class="group relative inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-900/50 border border-slate-700 hover:border-primary-500/50 hover:bg-slate-900/80 transition-all duration-300 hover:-translate-y-0.5 text-sm">
        <span class="text-slate-400 group-hover:text-primary-400 transition-colors">#</span>
        <span class="text-slate-200 group-hover:text-white font-medium">{{ tag.name }}</span>
        {% if tag.count > 1 %}
        <span class="text-xs py-0.5 px-1.5 rounded-full bg-slate-800 text-slate-500 group-hover:bg-slate-800/80 group-hover:text-slate-400 border border-slate-700/50">{{ tag.count }}</span>
        {% endif %}
      </a>
    {% endfor %}
    <a href="/tags/" class="inline-flex items-center justify-center gap-2 px-3 py-1.5 rounded-full border border-slate-700 text-slate-500 hover:text-slate-300 hover:bg-slate-800 transition-colors text-sm font-medium">
      <span>View all tags</span>
      <span>&rarr;</span>
    </a>
  </div>
</div>
