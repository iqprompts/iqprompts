{
  "name": "iqprompts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run watch:css\" \"eleventy --serve\"",
    "build": "pnpm run build:css && eleventy",
    "build:css": "tailwindcss -i ./src/system/styles/input.css -o ./_site/style.css",
    "watch:css": "tailwindcss -i ./src/system/styles/input.css -o ./_site/style.css --watch",
    "validate": "node src/system/scripts/validate-prompts.js",
    "test": "npm run validate"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "cssnano": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "node-fetch": "^2.7.0",
    "zod": "^4.1.13"
  }
}